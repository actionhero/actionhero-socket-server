{
  "author": "Evan Tahler <evan@delicioushat.com>",
  "name": "actionhero-socket-server",
  "description": "A TCP and JSON server for actionhero",
  "version": "2.0.0",
  "homepage": "http://www.actionherojs.com",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/actionhero/actionhero-socket-server.git"
  },
  "main": "index.js",
  "keywords": [
    "api",
    "realtime",
    "socket",
    "web",
    "game",
    "cluster",
    "soa",
    "action",
    "service",
    "tcp",
    "json"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "latest",
    "@types/jest": "latest",
    "actionhero": "^23.0.5",
    "jest": "^25.1.0",
    "prettier": "latest",
    "ts-jest": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "test": "jest",
    "pretest": "npm run lint && npm run build",
    "lint": "prettier --check src/*.ts __tests__/*.ts",
    "dev": "ts-node-dev --no-deps --transpile-only ./src/server.ts",
    "build": "./node_modules/.bin/tsc --declaration && rm -rf dist/actions",
    "start": "node ./dist/server.js",
    "prepare": "npm run lint && npm run build"
  }
}
